---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import ReadingProgress from "../components/ReadingProgress.astro";

type Props = CollectionEntry<"blog">["data"] & {
  selectedItem?: string;
};

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  tags,
  selectedItem = "blog",
} = Astro.props;
---

<html lang="cn">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      /* Blog Post Layout */
      .back-nav-container {
        color: var(--text-primary);
        letter-spacing: 2px;
        text-transform: uppercase;
        align-items: center;
        padding-bottom: 0;
        font-weight: 500;
        display: flex;
        margin-bottom: 2rem;
      }

      .back-nav-button {
        color: var(--text-primary);
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--glass-border);
        border-radius: var(--border-radius-lg);
        margin-top: -12px;
        padding: 12px 16px;
        text-decoration: none;
        transition: all var(--transition-smooth);
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: var(--shadow-sm);
      }

      .back-nav-button:hover {
        background: var(--accent-light);
        border-color: var(--accent);
        transform: translateX(-4px);
        box-shadow: 0 4px 16px rgba(63, 193, 201, 0.2);
      }

      .back-nav-img {
        width: 18px;
      }

      .article-container {
        max-width: 800px;
        animation: fadeIn 0.6s var(--transition-elegant);
      }

      .hero-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: var(--border-radius-xl);
        margin-bottom: 2rem;
        box-shadow: var(--shadow-lg);
        transition: transform var(--transition-elegant);
      }

      .hero-image:hover {
        transform: scale(1.02);
      }

      .article-header {
        margin-bottom: 3rem;
      }

      .article-title {
        font-size: 2rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 1rem;
        line-height: 1.3;
      }

      .article-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
      }

      .article-date {
        color: var(--text-secondary);
        font-family: "IBM Plex Mono", sans-serif;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .article-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }

      .article-tag {
        background: var(--chip-bg);
        backdrop-filter: blur(10px);
        color: var(--chip-text);
        padding: 6px 12px;
        border-radius: 20px;
        font-family: "IBM Plex Mono", sans-serif;
        font-size: 10px;
        text-transform: uppercase;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all var(--transition-smooth);
        display: inline-block;
      }

      .article-tag:hover {
        background: var(--accent-light);
        border-color: var(--accent);
        transform: translateY(-2px);
      }

      .article-divider {
        width: 100%;
        height: 1px;
        background: var(--border-primary);
        margin: 2rem 0;
      }

      /* Prose Styles - Optimized Typography */
      .prose {
        color: var(--text-primary);
        line-height: 1.8;
        font-size: 16px;
      }

      .prose :global(h1),
      .prose :global(h2),
      .prose :global(h3),
      .prose :global(h4),
      .prose :global(h5),
      .prose :global(h6) {
        color: var(--text-primary);
        font-weight: 600;
        line-height: 1.3;
        letter-spacing: -0.02em;
        scroll-margin-top: 2rem;
      }

      .prose :global(h1) {
        font-size: 1.75rem !important;
        margin-top: 3rem;
        margin-bottom: 1.25rem;
        font-weight: 700;
        line-height: 1.3 !important;
        letter-spacing: -0.02em;
        color: var(--text-primary);
      }

      .prose :global(h2) {
        font-size: 1.5rem !important;
        margin-top: 2.5rem;
        margin-bottom: 1.25rem;
        font-weight: 700;
        line-height: 1.3 !important;
        letter-spacing: -0.02em;
        color: var(--text-primary);
      }

      /* Remove global h2 decoration in prose */
      .prose :global(h2::after) {
        display: none;
      }

      .prose :global(h3) {
        font-size: 1.25rem !important;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: var(--text-primary);
        font-weight: 600;
        line-height: 1.3 !important;
        letter-spacing: -0.02em;
      }

      .prose :global(h4) {
        font-size: 1.1rem !important;
        margin-top: 1.75rem;
        margin-bottom: 0.75rem;
        font-weight: 600;
        color: var(--text-primary);
        line-height: 1.3 !important;
        letter-spacing: -0.02em;
      }

      .prose :global(h5),
      .prose :global(h6) {
        font-size: 1rem;
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: 0.9rem;
      }

      .prose :global(p) {
        margin-bottom: 1.5rem;
        margin-top: 0;
        color: var(--text-secondary);
        line-height: 1.8;
      }

      /* Better spacing after headings */
      .prose :global(h1 + p),
      .prose :global(h2 + p),
      .prose :global(h3 + p),
      .prose :global(h4 + p) {
        margin-top: 0.75rem;
      }

      .prose :global(a) {
        color: var(--accent);
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: all var(--transition-fast);
      }

      .prose a:hover {
        border-bottom-color: var(--accent);
      }

      .prose code {
        background: rgba(63, 193, 201, 0.1);
        backdrop-filter: blur(10px);
        color: var(--accent);
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
        font-family: "IBM Plex Mono", monospace;
        font-size: 0.9em;
        border: 1px solid rgba(63, 193, 201, 0.2);
      }

      .prose pre {
        background: var(--glass-bg);
        backdrop-filter: blur(var(--blur-amount));
        border: 1px solid var(--glass-border);
        border-radius: var(--border-radius-xl);
        padding: 1.5rem;
        overflow-x: auto;
        margin: 2rem 0;
        box-shadow: var(--shadow-md);
        position: relative;
      }

      .prose pre::before {
        content: "";
        position: absolute;
        top: 1rem;
        left: 1rem;
        width: 10px;
        height: 10px;
        background: var(--window-red);
        border-radius: 50%;
        box-shadow:
          16px 0 0 var(--window-yellow),
          32px 0 0 var(--window-green);
      }

      .prose pre code {
        background: none;
        padding: 0;
        padding-left: 3rem;
        color: var(--text-primary);
        border: none;
      }

      .prose blockquote {
        border-left: 4px solid var(--accent-secondary);
        background: linear-gradient(
          135deg,
          rgba(252, 81, 133, 0.05),
          rgba(63, 193, 201, 0.05)
        );
        backdrop-filter: blur(10px);
        padding: 1.25rem 1.75rem;
        margin: 2rem 0;
        border-radius: 0 var(--border-radius-lg) var(--border-radius-lg) 0;
        box-shadow: var(--shadow-sm);
        position: relative;
      }

      .prose blockquote::before {
        content: '"';
        position: absolute;
        top: -0.5rem;
        left: 1rem;
        font-size: 4rem;
        color: var(--accent-secondary);
        opacity: 0.15;
        line-height: 1;
      }

      .prose blockquote p {
        margin: 0;
        color: var(--text-primary);
        font-style: italic;
      }

      .prose ul,
      .prose ol {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
      }

      .prose li {
        margin-bottom: 0.5rem;
        color: var(--text-secondary);
      }

      .prose img {
        width: 100%;
        height: auto;
        border-radius: var(--border-radius-lg);
        margin: 2rem 0;
        box-shadow: var(--shadow-md);
        transition: transform var(--transition-elegant);
      }

      .prose img:hover {
        transform: scale(1.02);
        box-shadow: var(--shadow-lg);
      }

      .prose hr {
        border: none;
        height: 1px;
        background: var(--border-primary);
        margin: 2rem 0;
      }

      .prose table {
        width: 100%;
        border-collapse: collapse;
        margin: 2rem 0;
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        border: 1px solid var(--glass-border);
        box-shadow: var(--shadow-md);
      }

      .prose th,
      .prose td {
        padding: 1rem 1.25rem;
        text-align: left;
        border-bottom: 1px solid var(--border-primary);
        transition: background var(--transition-fast);
      }

      .prose th {
        background: rgba(0, 122, 255, 0.1);
        font-weight: 600;
        color: var(--text-primary);
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
      }

      .prose td {
        color: var(--text-secondary);
      }

      .prose tr:hover td {
        background: rgba(255, 255, 255, 0.03);
      }

      @media (max-width: 768px) {
        .article-title {
          font-size: 1.75rem;
        }

        .hero-image {
          height: 250px;
        }

        .prose {
          font-size: 15px;
        }

        .prose h1 {
          font-size: 1.5rem;
        }

        .prose h2 {
          font-size: 1.25rem;
        }

        .prose h3 {
          font-size: 1.125rem;
        }
      }
    </style>
  </head>

  <body>
    <div class="content">
      <ReadingProgress />
      <Header selectedItem={selectedItem} />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/blog" class="back-nav-button">
              <svg class="back-nav-img" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"
                ></path>
              </svg>
              <div>Back to Blog</div>
            </a>
          </div>
          <article class="article-container">
            {
              heroImage && (
                <Image
                  class="hero-image"
                  width={1020}
                  height={510}
                  src={heroImage}
                  format="webp"
                  quality={95}
                  alt=""
                />
              )
            }
            <div class="article-header">
              <h1 class="article-title">{title}</h1>
              <div class="article-meta">
                <div class="article-date">
                  <FormattedDate date={pubDate} />
                  {
                    updatedDate && (
                      <span>
                        {" "}
                        â€¢ Updated <FormattedDate date={updatedDate} />
                      </span>
                    )
                  }
                </div>
              </div>
              {
                tags && tags.length > 0 && (
                  <div class="article-tags">
                    {tags.map((tag) => (
                      <div class="article-tag">{tag}</div>
                    ))}
                  </div>
                )
              }
              <div class="article-divider"></div>
            </div>
            <div class="prose">
              <slot />
            </div>
          </article>
        </div>
      </nav>
    </div>
  </body>
</html>
