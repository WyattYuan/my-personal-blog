<style>
  /* Social Links Styling */
  .social-links {
    margin-top: auto;
    padding-top: 2rem;
    border-top: 1px solid var(--border-primary);
  }

  .social-links .mini-label-white {
    color: var(--text-secondary);
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    margin-bottom: 0.75rem;
  }

  .social-container {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .social-link {
    color: var(--text-secondary);
    padding: 0.75rem;
    border-radius: var(--border-radius-lg);
    transition: all var(--transition-smooth);
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-sm);
    position: relative;
    overflow: hidden;
  }

  .social-link::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(63, 193, 201, 0.2);
    transform: translate(-50%, -50%);
    transition: none;
    opacity: 0;
  }

  .social-link:hover::before {
    width: 100px;
    height: 100px;
    opacity: 1;
    transition:
      width 0.6s,
      height 0.6s,
      opacity 0.3s;
  }

  .social-link:hover {
    color: #ffffff;
    background: linear-gradient(135deg, var(--accent), var(--accent-secondary));
    border-color: var(--accent);
    transform: translateY(-4px) scale(1.15) rotate(5deg);
    box-shadow: 0 8px 24px rgba(63, 193, 201, 0.4);
  }

  .social-link:active {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 4px 12px rgba(63, 193, 201, 0.3);
  }

  .social-link svg {
    position: relative;
    z-index: 1;
    transition: transform var(--transition-smooth);
  }

  .social-link:hover svg {
    transform: scale(1.1);
  }

  /* Mobile Menu (for future mobile implementation) */
  .mobile-menu-button {
    display: none;
  }

  @media screen and (max-width: 991px) {
    .mobile-menu-button {
      display: block;
    }

    .nav-menu {
      display: none;
    }

    .nav-menu.is-open {
      display: block;
      position: fixed;
      left: 0;
      right: 0;
      top: 92px;
      background: var(--bg-secondary);
      z-index: 1000;
    }
  }
</style>
